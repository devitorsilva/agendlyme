{
    "name": "agendlyme-functions",
    "version": "1.0.0",
    "description": "Cloud Functions for AgendlyMe",
    "main": "lib/index.js",
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc --watch",
        "serve": "npm run build && firebase emulators:start --only functions",
        "shell": "npm run build && firebase functions:shell",
        "start": "npm run shell",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log"
    },
    "engines": {
        "node": "18"
    },
    "dependencies": {
        "firebase-admin": "^11.0.1",
        "firebase-functions": "^4.0.1",
        "googleapis": "^126.0.1",
        "nodemailer": "^6.9.7",
        "@sendgrid/mail": "^7.7.0",
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "helmet": "^7.0.0"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/express": "^4.17.17",
        "@types/cors": "^2.8.13",
        "@types/nodemailer": "^6.4.8",
        "typescript": "^5.0.0",
        "firebase-functions-test": "^3.1.0"
    },
    "private": true
}